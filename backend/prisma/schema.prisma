generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  githubId  String   @unique
  name      String?
  repos     Repo[]
}

model Repo {
  id           String   @id @default(uuid())
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  githubRepoId String
  name         String
  stories      Story[]  @relation("RepoStories")
}

model Story {
  id            String   @id @default(uuid())
  repo          Repo     @relation("RepoStories", fields: [repoId], references: [id], onDelete: Cascade)
  repoId        String
  globalContext String?  // User's global context for the story
  createdAt     DateTime @default(now())
  chapters      Chapter[]
}

model Chapter {
  id          String   @id @default(uuid())
  story       Story    @relation(fields: [storyId], references: [id], onDelete: Cascade)
  storyId     String
  title       String?  // Generated title for the chapter
  summary     String   // AI-generated summary
  userNotes   String?  // User's custom notes
  commitShas  String[] // Array of commit SHAs in this chapter
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
